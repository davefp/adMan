<div class="calendar">
  <h2 class="month">
    <%#= link_to "<", bookings_path(:month => (@date.beginning_of_month-1).strftime("%Y-%m")), :class => 'adm-arrow-link' %>
    <div class="adm-arrow cal-back" data-month="<%= (@date.beginning_of_month-1).strftime("%m") %>" data-year="<%= (@date.beginning_of_month-1).strftime("%Y") %>"><</div>
    <%= h @date.strftime('%B %Y')%>
    <%#= link_to ">", bookings_path(:month => (@date.end_of_month+1).strftime("%Y-%m")), :class => 'adm-arrow-link' %>
    <div class="adm-arrow cal-forward" data-month="<%= (@date.end_of_month+1).strftime("%m") %>" data-year="<%= (@date.end_of_month+1).strftime("%Y") %>">></div>
  </h2>
  <%= calendar_for @bookings, :year => @date.year, :month => @date.month do |calendar| %>
    <%= calendar.head(
      'Sunday',
      'Monday', 
      'Tuesday', 
      'Wednesday', 
      'Thursday', 
      'Friday', 
      'Saturday')%>
    <%= calendar.day(:day_method => :date) do |date, bookings| %>
      <div class="calendar-day" data-day="<%= date.day %>" data-month="<%= date.month %>" data-year="<%= date.year %>">
      <%= date.day %>
        <ul class="listing">

          <% num_pages = 0 %>
          <% for booking in bookings %>
            <% num_pages += booking.pages.length %>
          <% end %>
          <div>
            <li><span class="number"><%= bookings.length%></span><i class="icon-notebook"></i></li>
            <li><span class="number"><%= num_pages %></span><i class="icon-file-4"></i> </li>
          </div>
        </ul>
      </div>
    <% end %>
  <% end %>
</div>