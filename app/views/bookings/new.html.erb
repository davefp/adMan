<div class="adm-midfloat-box">
<%= form_for @booking do |f| %>
  <div class="adm-input">
  	<%= f.label :date, "Date:" %>
  	<%= f.text_field :date,
  				value: @booking_date.strftime("%e %B %Y"),
  				disabled: true, :class => "adm-date-query" %>
    <%= f.label :client, "Client" %>
    <%= select("booking","client_id", Client.all.collect {|c| [ c.name, c.id ]}) %>
 <!--    <#%= f.label :page, "Page:" %>
    <#%= select("booking","page_id", Page.all.collect{|p|[p.name, p.id]}) %>
  -->
  </div>
  <%= f.submit "Book Now", 
    html:{ class: "adm-button adm-button-main"}%>
<% end %>
</div>