<% provide(:login_page, "class=cloud-bg") %>
<div class="cover"></div>
<div class="adm-login-box">
	<%= render "shared/alertnotice" %>
<% if current_user %>

	<div class="adm-alert">
	  <p id='notice'> Why are you trying to login again? :\ </p>   
	</div>

<% else %>

	<%= form_tag sessions_path do %>
	  <div class="field adm-input">
	    <span class="label"><%= label_tag :email %></span>
	    <%= text_field_tag :email, params[:email],  :placeholder => "Your Email" %>
	  </div>
	  <div class="field adm-input">
	    <span class="label"><%= label_tag :password %></span>
	    <%= password_field_tag :password %>
	  </div>
	  <div class="actions adm-button"><%= submit_tag "Log In" %></div>
	<% end %>

<% end %>
