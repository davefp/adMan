<div class="adm-midfloat-box">
  <%= render "shared/alertnotice" %>
  <%= form_for @page do |f| %>
    <div class="adm-input">
      <span class="label">
        <%= f.label :name %>
      </span>
      <%= f.text_field :name %>
    </div>
    <div class="adm-input">
      <span class="label">
        <%= f.label :slug, "URL" %>
      </span>
      <%= f.text_field :slug %>
    </div>
    <div class="actions">
    <%= submit_tag "Add Page", class: "adm-button" %>
  </div>
  <% end %>
</div>